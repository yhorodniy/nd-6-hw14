{
  "name": "nd-6-hw13",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "deps:client": "npm --prefix ./client install",
    "build:client": "npm --prefix ./client run build:client",
    "deps:server": "npm --prefix ./server install",
    "build:server": "npm --prefix ./server run build:server",
    
    "typeorm:migration:run": "npm --prefix ./server run migration:run",
    "typeorm:migration:generate": "npm --prefix ./server run migration:generate",
    "typeorm:migration:revert": "npm --prefix ./server run migration:revert",
    "typeorm:schema:sync": "npm --prefix ./server run schema:sync",
    "typeorm:schema:drop": "npm --prefix ./server run schema:drop",
    
    "db:safe-setup": "npm --prefix ./server run db:safe-setup",
    "load:demo-data": "npm --prefix ./server run load:demo-data",
    
    "prod:client": "npm run deps:client && npm run build:client",
    "prod:server": "npm run deps:server && npm run build:server",
    "run:server": "npm --prefix ./server run start:prod",

    "setup:db": "npm run db:safe-setup && npm run load:demo-data",
    "start:app": "npm run prod:client && npm run prod:server && npm run setup:db && npm run run:server",

    "start:dev": "npm --prefix ./client run dev:client & npm --prefix ./server run dev:server"
  },
